<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-t-50 p-b-90">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login100-form validate-form flex-sb flex-w' }) do |f| %>
        <span class="login100-form-title p-b-51">
          เข้าสู่ระบบ
        </span>

        <div class="mt-3 wrap-input100 validate-input m-b-16">
          <%= f.text_field :email,
                            required: false,
                            autofocus: true,
                            label: false,
                            class: 'input100',
                            autocomplete: "email",
                            placeholder: 'อีเมล' %>
          <span class="focus-input100"></span>
        </div>

        <div class="mt-3 wrap-input100 validate-input m-b-16 mt-3">
          <%= f.password_field :password,
                                required: false,
                                autofocus: true,
                                label: false,
                                class: 'input100',
                                autocomplete: "password",
                                placeholder: 'รหัสผ่าน' %>
          <span class="focus-input100"></span>
        </div>

        <br>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= link_to new_password_path(resource_name), class: 'link-to' do %>
          ลืมรหัสผ่าน?
        <% end %>

        <div class="container-login100-form-btn m-t-17 mt-3">
          <%= button_tag "เข้าสู่ระบบ", class: 'login100-form-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
