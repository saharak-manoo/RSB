<% branch_products.each_with_index do |branch_product, index| %>
  <% product = branch_product.product %>
  <div class="col-sm-12 col-lg-12" data-path-value="<%= branch_product_path(product) %>" id="card-<%= index %>">
    <div class="card-noline w-100 wrap shadow bg-body rounded mt-3">
      <div class="card-body p-2">
        <div class="d-flex flex-row">
          <%= image_tag(product.image_url, class: 'product-img') %>
          <div class="d-flex flex-column pl-2">
            <strong><%= product.name %></strong>
            <span class="pt-2">ราคา: <%= precision(product.price) %> บาท</span>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <div class="row">
            <div class="col-sm-2 offset-2">
              <ion-icon name="remove-circle-outline" class="text-danger for-click" size="large" id="remove-<%= index %>" data-action="click->branch-products#remove"></ion-icon>
            </div>
            <div class="col-sm-4">
              <input data-action="change->branch-products#updateQty" type="number" class="form-control input-manulator" id="show-value-<%= index %>" value="<%= branch_product.qty %>">
            </div>
            <div class="col-sm-2">
              <ion-icon name="add-circle-outline" class="text-success for-click" size="large" id="add-<%= index %>" data-action="click->branch-products#add"></ion-icon>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>