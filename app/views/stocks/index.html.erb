<div class="bg-primary pt-10 pb-21"></div>
  <div class="container-fluid mt-n22 px-6">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-12">
        <div>
          <div class="d-flex justify-content-between align-items-center">
            <div class="mb-2 mb-lg-0">
              <h3 class="mb-0  text-white">เช็ก Stock</h3>
            </div>
            <div>
              <a href="#" class="btn btn-white">Create New Project</a>
            </div>
          </div>

          <div class="row mt-6" data-controller="stocks" data-stocks-stocks-path-value="<%= stocks_path %>">
            <div class="col-md-12 col-12">
              <div class="card">
                <div class="card-header bg-white py-4">
                  <div class="row">
                    <div class="col-sm-6 col-lg-3" data-controller="search-select">
                      <%= select_tag "", options_from_collection_for_select(@branches, "id", "name"), id: 'branch-select', class: 'use-search-select', data: { action: "change->stocks#changeBranch" } %>
                    </div>
                    <div class="col-sm-6 col-lg-3 offset-lg-6 pt-1">
                      <div class="d-flex flex-row-reverse">
                        <input class="form-control" placeholder="Search..." data-action="keyup->stocks#searchProduct">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="table-responsive">
                  <table class="table text-nowrap mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>ชื่อสินค้า</th>
                        <th>จำนวน (ชิ้น)</th>
                        <th>ราคา (บาท)</th>
                      </tr>
                    </thead>
                    <tbody id="products">
                      <%= render 'product_table', stocks: @stocks %>
                    </tbody>
                  </table>
                </div>

                <div class="m-3" id="paginate">
                  <%= paginate @page_stocks, params: { controller: 'stocks', action: 'index' } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>