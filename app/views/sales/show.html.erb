<div class="bg-primary pt-10 pb-21"></div>
  <div class="container-fluid mt-n22 px-6">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-12">
        <div>
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex flex-row">
              <%= link_to sales_path do %>
                <ion-icon name="arrow-back-outline" class="text-white m-2"></ion-icon>
              <% end %>
              <h3 class="mb-0 text-white">รายการขาย <%= @stock.product.name %> (<%= @stock.branch.name %>)</h3>
            </div>
          </div>

          <div class="row mt-6">
            <div class="col-md-12 col-12">
              <div class="card">
                <div class="card-header bg-white py-4">
                  <h3>ประจำวันที่ <%= @date.date_full_format %></h3>

                  <div class="pt-3">
                    <ul class="list-group list-group-flush" id="sales">
                      <%= render 'sales/sale', sales: @sales %>
                    </ul>
                  </div>

                  <div class="m-3" id="paginate">
                    <%= paginate @sales, params: { controller: 'sales', action: 'show' } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>